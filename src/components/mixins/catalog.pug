include ./productCard.pug
include ./navigationPage.pug
include ./detailPopup.pug
include ./analogPopup.pug

mixin catalog()
  section.catalog 
    .container 
      .catalog__content 
        aside.catalog__sidebar.desk_viewed 
          h4.sidebar__title Категории
          ul.sidebar__categories
            - for(let i=0;i<3;i++)
              li.sidebar__category
                span.sidebar__category-title 
                  figure.icon 
                    img(src="./icons/arrow-right.png", alt="")
                  | Запчасти на КАМАЗ
                ul.sidebar__category-list 
                  li.sidebar__category-item.category-active Система отопления
                  li.sidebar__category-item Тормозная система
                  li.sidebar__category-item Двигатель
                  li.sidebar__category-item Система отопления
                  li.sidebar__category-item Тормозная система
                  li.sidebar__category-item Двигатель
          .filter 
            .filter-block 
              h4.filter-block__title Тип товара
              input.filter-block__search(type='text' name='search' placeholder='Поиск...')
              .filter-block__checkboxes
                - for (let i=0;i<6;i++) 
                  label.filter-block__checkbox-item
                    input(type="checkbox" name='type')
                    span Дышло
                  label.filter-block__checkbox-item
                    input(type="checkbox" name='type')
                    span Система отопления
              .filter-block__more Показать все
            .filter-block 
              h4.filter-block__title Производитель
              input.filter-block__search(type='text' name='search' placeholder='Поиск...')
              .filter-block__checkboxes
                - for (let i=0;i<6;i++) 
                  label.filter-block__checkbox-item
                    input(type="checkbox" name='manafacturer')
                    span Паневежио-Аурида
                  label.filter-block__checkbox-item
                    input(type="checkbox" name='manafacturer')
                    span БАТЭ
              .filter-block__more Показать все
            .filter-block 
              h4.filter-block__title По алфавиту
              .filter-block__letters
                - for (let i=0;i<8;i++) 
                  label.filter-block__letter
                    input(type="checkbox" name='letter')
                    span А
                  label.filter-block__letter
                    input(type="checkbox" name='letter')
                    span Б
        .catalog-items
          header.catalog__head
            .catalog__filter.mobile_viewed 
              figure.icon 
                img(src="./icons/filter.png", alt="")
              span Фильтр 
            .catalog__sort 
              .catalog__sort-text Сначала дешевые
              figure.catalog__sort-arrow.icon 
                include ../../icons/arrow.svg
              .catalog__sort-dropdown 
                .catalog__sort-item.item_selected Сначала дешевые
                .catalog__sort-item Сначала дорогие
                .catalog__sort-item По алфавиту А-Я
                .catalog__sort-item По алфавиту Я-А
                .catalog__sort-item По новизне
            .catalog__pages.desk_viewed
              +navigationPage()
          .catalog__items
            - for(let i=0;i<4;i++)
              +productCard()
            .catalog__banner-sep 
              .catalog__banner-content 
                h3.catalog__banner-title Наши диллерские сертификаты
                .catalog__banner-desc 
                  p АВТОМОТОРС является дилером и партнером более 200 заводов-смежников.
                a.catalog__banner-link(href="#")
                button.btn.btn--darkest Подробнее 
              figure.image.object-fit.catalog__banner-pic
                img(src="./images/banner.png", alt="") 
            - for(let i=0;i<4;i++)
              +productCard()
          footer.catalog__foot 
            +navigationPage()
  +detailPopup()
  +analogPopup()
  a.catalog-basket.mobile_viewed(href="./basket.pug") 
    figure.personality__icon.icon 
      img(src="./images/basket.png", alt="Корзина")
      span.personality__basket-count 1
    span.catalog-basket__text Корзина
    span.catalog-basket__num <b>12 560</b> руб.
  .filter-menu.mobile_viewed
    .filter-menu__head 
      .filter-menu__title Фильтр
      .filter__close.mobile_viewed.btn--with-burger.header__burger
        span
          span 
          span 
          span
    .filter 
      .filter-block 
        h4.filter-block__title 
          span Тип товара
        input.filter-block__search(type='text' name='search' placeholder='Поиск...')
        .filter-block__checkboxes
          - for (let i=0;i<6;i++) 
            label.filter-block__checkbox-item
              input(type="checkbox" name='type')
              span Дышло
            label.filter-block__checkbox-item
              input(type="checkbox" name='type')
              span Система отопления
      .filter-block 
        h4.filter-block__title 
         span Производитель
        input.filter-block__search(type='text' name='search' placeholder='Поиск...')
        .filter-block__checkboxes
          - for (let i=0;i<6;i++) 
            label.filter-block__checkbox-item
              input(type="checkbox" name='manafacturer')
              span Паневежио-Аурида
            label.filter-block__checkbox-item
              input(type="checkbox" name='manafacturer')
              span БАТЭ
      .filter-block 
        h4.filter-block__title 
          span По алфавиту
        .filter-block__letters
          - for (let i=0;i<8;i++) 
            label.filter-block__letter
              input(type="checkbox" name='letter')
              span А
            label.filter-block__letter
              input(type="checkbox" name='letter')
              span Б
    .filter__buttons 
      button.btn Применить
      button.btn.btn--grey Сбросить